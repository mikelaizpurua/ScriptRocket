<div class="container">

  <div class="page-header">
    <h1><%= @profile.first_name %> <%= @profile.last_name %></h1>
    <h4><%= @profile.occupation %></h4>
    <h5><%= @profile.city %></h5>
    <h6><<%= @profile.gender %></h6>
  </div>

</div>


<!-- <div class="script">
	<%= image_tag @profile.image.url(:medium) %>
</div>


<div class="btn-group">
	<%= link_to 'Read Script', @link.url, class: "btn btn-primary" %>
</div>


<% if @link.user == current_user -%>
	<div class="btn-group">
		<%= link_to 'Edit Script', edit_link_path(@link), class: "btn btn-default" %>
		<%= link_to 'Delete Script', @link, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
	</div>
<% end %>


<div class="btn-group pull-right">
	<%= link_to like_link_path(@link), method: :put, class: "btn btn-default btn-sm" do %>
	<span class="glyphicon glyphicon-chevron-up"></span>
	Upvote
	<%= @link.get_upvotes.size %>
	<% end %>
	<%= link_to dislike_link_path(@link), method: :put, class: "btn btn-default btn-sm" do %>
	<span class="glyphicon glyphicon-chevron-down">
		Downvote
		<%= @link.get_downvotes.size %>
		<% end %>
</div>


<h3 class="comments_title">
	<%= @link.comments.count %> Comments
</h3>


<div id="comments">
	<%= render :partial => @link.comments %>
</div>

<% if user_signed_in? -%>
	<%= simple_form_for [@link, Comment.new] do |f| %>
	<div class="field">
		<%= f.text_area :body, class: "form-control" %>
	</div>
	<br>
	<%= f.submit "Add Comment", class: "btn btn-primary" %>
	<% end %>
<% end -%>

</div>
